    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Configure Project",
            "group": "build",
            "command": ["cmake", "-S", ".", "-B", "build"],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "Build Project",
            "group": "build",
            "command": ["cmake", "--build", "build"],
            "problemMatcher": [],
            "dependsOn": ["Configure Project"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "Run Project",
            "command": ["./build/myexe"],
            "dependsOn": ["Build Project"],
            "group": { "kind": "test", },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
    ]
}

