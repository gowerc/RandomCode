{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build and Run",
            "command": [
                "g++",
                "-std=c++20",
                "-o", "${workspaceFolder}/bin/${fileBasenameNoExtension}",
                "${file}"
            ],
            "group": {
                "kind": "test",  // Can be "test" or "build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "Run File",
            "command": ["${workspaceFolder}/bin/${fileBasenameNoExtension}"],
            "dependsOn": ["Build and Run"],
            "group": { "kind": "test", },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
    ]
}